<h1>Log a new package!</h1>

<form action="/parcels" method="post">
  <div class="form-group">
    <label for="package_dimension_w">Dimensions: Width</label>
    <input id="n" name="package_dimension_w" class="form-control" type="text">

    <label for="package_dimension_h">Dimensions: Height Y</label>
    <input id="n" name="package_dimension_h" class="form-control" type="text">

    <label for="package_dimension_l">Dimensions: Length</label>
    <input id="n" name="package_dimension_l" class="form-control" type="text">

    <label for="package_weight">Weight</label>
    <input id="n" name="package_weight" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
